generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  image       String
  technologies String
  githubUrl   String?
  liveUrl     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Contact {
  id          String   @id @default(cuid())
  name        String
  email       String
  phone       String?
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
